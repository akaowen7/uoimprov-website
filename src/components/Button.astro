---
interface Props {
  link: string;
  bodyClass?: string;
}

const { link, bodyClass = "" } = Astro.props;
---

<a
  href={link}
  class:list={[
    "text-lg flex flex-row items-center boarder-solid border-2 py-2 px-6 rounded-lg",
    "transition duration-200 ease-in-out hover:-translate-y-1 hover:shadow-lg hover:bg-cyan-50",
    bodyClass,
  ]}
>
  <slot />
</a>
